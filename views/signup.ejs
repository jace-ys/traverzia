<% include templates/header %>
<link href="/stylesheets/css/signup.css" rel="stylesheet" type="text/css">

	<div class="container">
		<div class="mx-auto mb-2 text-center" id="signup-header">
			<% if(success && success.length) { %>
			<div class="col-lg-6 col-xs-8 col-12 mx-auto alert alert-success" role="alert">
				<%= success %>
			</div>
			<% } %>
			<% if(error && error.length) { %>
			<div class="col-lg-6 col-xs-8 col-12 mx-auto alert alert-danger" role="alert">
				<%= error %>
			</div>
			<% } %>
			<h2>Create an account</h2>
			<h6>Have an account? <a href="/login" id="login-link">Login!</a></h6>
		</div>
		<form class="mx-auto col-lg-6 col-sm-8 col-12" action="/signup" method="POST" id="signup-form" novalidate>
			<div class="form-group" id="username-field">
				<label for="username">Username</label>
				<input class="form-control" type="text" name="username" placeholder="Username" required>
				<div class="invalid-feedback">Please enter a username.</div>
			</div>
			<div class="form-group" id="name-field">
				<label for="name">Name</label>
				<input class="form-control" type="text" name="name" placeholder="Name" required>
				<div class="invalid-feedback">Please enter your name.</div>
			</div>
			<div class="form-group" id="email-field">
				<label for="email">Email</label>
				<input class="form-control" type="email" name="email" placeholder="Email" required>
				<div class="invalid-feedback">Please enter your email.</div>
			</div>
			<div class="form-group" id="password-field">
				<label for="password">Password (8-16 characters long)</label>
				<input class="form-control" type="password" name="password" placeholder="Password" pattern=".{8,16}" required>
				<div class="invalid-feedback">Please enter a password.</div>
			</div>
			<div class="text-center mb-4">
				<button type="submit" class="btn btn-outline-primary btn-lg" disabled>Sign up!</i></button>
			</div>
		</form>
	</div>

<% include templates/scripts %>
	<script type="text/javascript" src="/js/signup.js"></script>
<% include templates/footer %>
