<% include templates/header %>

	<div class="container text-center">
		<h1>Upload new image</h1>
		<form action="/user" method="POST" id="upload-form">
			<div class="form-group">
				<input class="form-control" type="text" name="source" placeholder="Image URL">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="location" placeholder="Location">
			</div>
			<div class="form-group">
				<textarea class="form-control" type="text" name="caption" rows="5" placeholder="Caption"></textarea>
			</div>
			<button type="submit" class="btn btn-primary btn-lg">Upload <i class="fa fa-upload"></i></button>
		</form>
	</div>

<% include templates/scripts %>
<% include templates/footer %>